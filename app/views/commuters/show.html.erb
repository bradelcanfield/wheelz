<% provide(:title, @commuter.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="commuter_info">
      <h1>
        <%= gravatar_for @commuter %>
        <%= @commuter.name %>
        <!-- <%= @commuter.email %> -->
      </h1>
    </section>
  </aside>
    <div class="microposts">


  <div class="col-md-8">
    <% if @commuter.microposts.any? %>
      <h3>Microposts (<%= @commuter.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
    </div>
  </div>
</div>
